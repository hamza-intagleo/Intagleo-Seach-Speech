%section#contact.wow.fadeInUp.sections.bg-white-color{"data-wow-duration" => "2s"}
  .container
    .row
      .col-12.col-sm-12.col-md-12.col-xl-12
        %h1.text-center.grow-buss Get In Touch For More Information
    .row
      .col-sm-12.col-md-10.col-xl-8.offset-md-1.offset-xl-2
        %form.contact-from
        = form_tag contact_us_path, class: 'contact-from' do
          .form-group
            %i
              = image_tag 'your-name.png'
            = text_field_tag 'name', nil, placeholder: 'Name', class: 'form-control'
          .form-group
            %i
              = image_tag 'your-email.png'
            = text_field_tag 'email', nil, placeholder: 'Email', class: 'form-control'
          .form-group
            %i
              = image_tag 'message.png'
            = text_area_tag 'message', nil, placeholder: 'Message', class: 'form-control', rows: "5"
          = submit_tag 'Submit', class: 'btn btn-default float-right btn-main'

