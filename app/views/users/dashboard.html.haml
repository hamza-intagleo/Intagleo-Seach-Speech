#page-top
  #wrapper
    / Sidebar
    = render partial: 'sidebar_menu'
    #content-wrapper.pb-3
      .container-fluid
        / Breadcrumbs
        %ol.breadcrumb
          %li.breadcrumb-item
            = link_to 'Dashboard', user_dashboard_path(current_user)
          %li.breadcrumb-item.active Overview
        / Icon Cards
        .row
          .col-md-9
            .card.mb-3
              .card-header.text-center
                %i.fas.fa-chart-area
                Search Requests
              .card-body
                = line_chart User.group_by_day(:created_at).count, download: {filename: "search_requests"}

            .card.mb-3
              .card-header.text-center
                %i.fas.fa-chart-area
                Search Response Time
              .card-body
                = line_chart User.group_by_day(:created_at).count, download: {filename: "search_response_time"}
          
          .col-md-3    
            .row
              .col-md-12.mb-3
                .card.text-white.bg-primary.o-hidden.h-100.text-center
                  .card-body
                    .mr-5 Total Searches
                  .card-footer.text-white.clearfix.small.z-1
                    %span
                    %b
                      99
            .row
              .col-md-12.mb-3
                .card.text-white.bg-primary.o-hidden.h-100.text-center
                  .card-body
                    .mr-5 Average Searches per Min
                  .card-footer.text-white.clearfix.small.z-1
                    %span
                      %b
                        29
            .row
              .col-md-12.mb-3
                .card.text-white.bg-primary.o-hidden.h-100.text-center
                  .card-body
                    .mr-5 Average Text Processing Time (Ms)
                  .card-footer.text-white.clearfix.small.z-1
                    %span 
                      %b 
                        3.01
            .row
              .col-md-12.mb-3
                .card.text-white.bg-primary.o-hidden.h-100.text-center
                  .card-body
                    .mr-5 Average Search Response Time (Ms)
                  .card-footer.text-white.clearfix.small.z-1
                    %span
                      %b
                        3.01

      
