:css
  * {
    box-sizing: border-box;
  }

  body {
    font-family: "Lato", Helvetica, Arial, sans-serif;
  }

  #page-loader{
    position: fixed;
  }

  #page-loader {
    border-radius: 4px 4px 4px 4px;
    position: absolute;
    text-align: center;
    height: 100%;
    width: 100%;
    left: 0%;
    top: 0;
    z-index: 5000;
    background-color: rgba(0,0,0,0.6);
    color: white;
    right: 0;
    bottom: 0;
    display: inline-flex;
    align-items: center;
    text-align: center;
    }

    #page-loader h3 {
      width: 100%;
    }

  #right-reply-widget {
    position: fixed;
    right: 5px;
    bottom: 5px;
    text-align: center;
    z-index: 999999;
  }
  #right-reply-widget .widget-circle {
    box-shadow: 0px 6px 20px 1px #bbb 61;
    display: inline-flex;
    align-items: center;
    color: #fff;
    border-radius: #{@site.site_configuration.present? && @site.site_configuration.widget_shape.present? ? @site.site_configuration.widget_shape == 'Rounded' ? '100%' : '0' : '100%'};
    width: 80px;
    position: absolute;
    right: 0;
    bottom: 0;
    z-index: 1000;
    height: 80px;
    background-color: ##{@site.site_configuration.present? ? @site.site_configuration.widget_fill_color : '0062cc'};
    border-color: ##{@site.site_configuration.present? ? @site.site_configuration.widget_fill_color : '0062cc'};
  }
  #right-reply-widget .widget-circle.apply-class {
    background-color: #dc3545;
    border-color: #dc3545;
    cursor: pointer;
  }
  #right-reply-widget .widget-circle.apply-class i {
    color: ##{@site.site_configuration.present? ? @site.site_configuration.widget_icon_color : 'ffffff'} !important;
  }
  #right-reply-widget .widget-circle.apply-class:hover {
    cursor: pointer;
    background-color: #dc3545;
    border-color: #dc3545;

  }
  #right-reply-widget .widget-circle:hover {
    background-color: ##{@site.site_configuration.present? ? @site.site_configuration.widget_fill_color_hover : '1a1e28'};
    cursor: pointer;
  }
  #right-reply-widget .widget-circle img {
    width: 35px;
    margin: auto;
  }
  #right-reply-widget .widget-circle i {
    color: ##{@site.site_configuration.present? ? @site.site_configuration.widget_icon_color : 'ffffff'};
    width: 35px;
    margin: auto;
  }
  #right-reply-widget .widget-circle i:hover {
    color: ##{@site.site_configuration.present? ? @site.site_configuration.widget_icon_color_hover : 'ffffff'};
    width: 35px;
    margin: auto;
  }
  #right-reply-widget .widget-text {
    width: 0;
    height: 80px;
    position: absolute;
    right: 8px;
    transition: all 0.3s linear 0s;
    display: none;
    bottom: 0;
    border-radius: 100%;
  }
  #right-reply-widget .widget-text input {
    width: 100%;
    padding-left: 30px;
    font-size: 20px;
    box-shadow: -6px 1px 20px 3px #575d6d 1c;
    border: none;
    height: 80px;
    border-radius: 50px;
  }

          