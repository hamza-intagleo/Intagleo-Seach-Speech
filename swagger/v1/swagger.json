          },
          {
            "name": "user_id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "site_id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "detail_id",
            "in": "query",
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": ""
