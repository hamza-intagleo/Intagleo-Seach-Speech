      "get": {
        "summary": "Search text into site",
        "tags": [
          "Site Management"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "api_key",
            "in": "header",
            "type": "string",
            "required": true
          },
          {
            "name": "signature",
            "in": "header",
            "type": "string",
            "required": true
          },
          {
            "name": "user_id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "site_id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "search_string",
            "in": "query",
            "type": "string"
          },
          {
            "name": "analytics_id",
            "in": "query",
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": ""
          },
          "422": {
            "description": "Not found any thing"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/{user_id}/sites/{site_id}/get_statistics": {
      "get": {
        "summary": "Get statistics",
        "tags": [
