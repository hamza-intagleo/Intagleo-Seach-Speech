{
  "swagger": "2.0",
  "info": {
    "title": "Right Reply API",
    "version": "v1"
  },
  "paths": {
    "/users": {
      "post": {
        "summary": "Creates a User",
        "tags": [
          "Site Management"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "site",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "site_name": {
                  "type": "string"
                },
                "site_url": {
                  "type": "string"
                }
              },
              "required": [
                "site_name",
                "site_url"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Site is successfully added"
          },
          "422": {
            "description": "Invalid request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/sign_in": {
      "post": {
        "summary": "User Sign In",
        "tags": [
          "User Management"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "type": "string",
            "required": true
          },
          {
            "name": "password",
            "in": "query",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "User is successfully logged in"
          },
          "422": {
            "description": "Invalid user name or password"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/password": {
      "post": {
        "summary": "Reset Password",
        "tags": [
          "User Management"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "You will receive an email with instructions on how to reset your password in a few minutes."
          },
          "422": {
            "description": "Invalid request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/{user_id}/renew_api_keys": {
      "get": {
        "summary": "Renew API Keys",
        "tags": [
          "User Management"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "New keys are successfully generated"
          },
          "422": {
            "description": "Invalid request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/generate_signature": {
      "get": {
        "summary": "Generate signature that can be used for API calls",
        "tags": [
          "User Management"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "api_key",
            "in": "header",
            "type": "string",
            "required": true
          },
          {
            "name": "signature",
            "in": "header",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": ""
          },
          "422": {
            "description": "Invalid request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/{user_id}/sites/{site_id}/add_site_configuration": {
      "post": {
        "summary": "Add site configuration",
