        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "site_id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "return_results_on_rendered_page",
            "in": "query",
            "type": "boolean",
            "required": true
          },
          {
            "name": "return_results_on_customer_webpage",
            "in": "query",
            "type": "boolean",
            "required": true
          },
          {
            "name": "custom_search_results_url",
            "in": "query",
            "type": "string"
          },
          {
            "name": "search_icon_color",
            "in": "query",
            "type": "string"
          },
          {
            "name": "search_icon_text",
            "in": "query",
            "type": "string"
          },
          {
            "name": "search_box_shape",
            "in": "query",
            "type": "string"
          },
          {
            "name": "search_box_fill_color",
            "in": "query",
            "type": "string"
          },
          {
            "name": "search_box_border_color",
            "in": "query",
            "type": "string"
          },
          {
            "name": "search_box_placeholder_text",
            "in": "query",
            "type": "text"
          }
        ],
        "responses": {
          "200": {
            "description": "Site configuration is added successfully"
          },
          "422": {
            "description": "Invalid request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/{user_id}/sites/{site_id}/get_site_configuration": {
      "get": {
        "summary": "Get site configuration",
        "tags": [
          "Site Management"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "site_id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": ""
          },
          "422": {
            "description": "Site configuration not found for the site"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/{user_id}/sites/{site_id}/convert_audio_to_text": {
      "post": {
        "summary": "Convert audio to text",
        "tags": [
          "Site Management"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "api_key",
            "in": "header",
            "type": "string",
            "required": true
          },
          {
            "name": "signature",
            "in": "header",
            "type": "string",
            "required": true
          },
          {
            "name": "user_id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "site_id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "audio_file",
            "in": "query",
